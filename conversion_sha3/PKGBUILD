name_github=Zami3l
executable=conversion

pkgname=conversion_sha3
pkgver=1.0
pkgrel=1
pkgdesc="Script python de conversion"
arch=(any)
url="https://github.com/$name_github/$pkgname"
license=(unknow)
depends=(python3 xclip)
source=("git+git://github.com/$name_github/$pkgname.git")
md5sums=('SKIP')

package () {
	install -d $pkgdir/usr/local/bin/$pkgname
	cp $srcdir/$pkgname/python/* $pkgdir/usr/local/bin/$pkgname/$executable
	chmod +x $pkgdir/usr/local/bin/$pkgname/$executable
}
